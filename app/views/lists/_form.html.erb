<%= form_with model: [@user, @list], local: true do |form| %>
  <div class="field">
    <h3>Hygiene Products</h3>
    <%= form.label :hygiene_items, "Select Hygiene Products" %><br>
    <%= form.collection_check_boxes :item_ids, @hygiene_items, :id, :name do |b| %>
      <div class="checkbox">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <h3>Food Products</h3>
    <%= form.label :food_items, "Select Food Products" %><br>
    <%= form.collection_check_boxes :item_ids, @food_items, :id, :name do |b| %>
      <div class="checkbox">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <h3>House Cleaning Products</h3>
    <%= form.label :cleaning_items, "Select House Cleaning Products" %><br>
    <%= form.collection_check_boxes :item_ids, @cleaning_items, :id, :name do |b| %>
      <div class="checkbox">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Create List" %>
  </div>
<% end %>
