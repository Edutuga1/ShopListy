<div class="container my-4">
  <!-- Page Header -->
  <header class="text-center mb-4">
    <h1 class="display-4">Direct Messages</h1>
  </header>

  <!-- Search for a Friend by Email -->
  <section class="mb-5">
    <h2 class="h4">Search for a Friend</h2>
    <div class="card shadow-sm p-4">
      <%= form_with url: search_users_path, method: :get, local: true, class: "needs-validation" do |f| %>
        <div class="form-group mb-3">
          <%= f.label :email, "Enter friend's email:", class: "form-label fw-semibold" %>
          <%= f.text_field :email, placeholder: "Friend's email", class: "form-control" %>
        </div>
        <div class="d-flex justify-content-end">
          <%= f.submit "Search", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Friend Requests -->
  <section class="mb-5">
    <h3 class="h4">Friend Requests</h3>
    <% if @pending_friend_requests.present? %>
      <ul class="list-group">
        <% @pending_friend_requests.each do |friendship| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><%= friendship.user.email %></span>
            <div>
              <%= button_to "Accept", accept_user_friendship_path(user_id: current_user.id, id: friendship.id), method: :patch, class: "btn btn-success btn-sm me-2" %>
              <%= button_to "Reject", reject_user_friendship_path(user_id: current_user.id, id: friendship.id), method: :patch, class: "btn btn-danger btn-sm" %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted">No friend requests at this time.</p>
    <% end %>
  </section>

  <!-- Start a New Conversation -->
  <section class="mb-5">
    <h2 class="h4">Start a New Conversation</h2>
    <% if @friends_without_conversations.any? %>
      <ul class="list-group">
        <% @friends_without_conversations.each do |friend| %>
          <li class="list-group-item">
            <%= link_to "Start conversation with #{friend.name}", new_user_conversation_path(current_user, friend_id: friend.id), class: "text-primary fw-bold" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted">All your friends already have conversations.</p>
    <% end %>
  </section>

  <!-- Open Conversations -->
  <section>
    <h1 class="h4">Your Opened Conversations</h1>
    <ul class="list-group">
      <% @conversations.each do |conversation| %>
        <li id="<%= dom_id(conversation) %>" class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to "Conversation with #{conversation.other_user(current_user).name}", user_conversation_path(current_user, conversation), class: "text-dark fw-bold" %>
          <%= button_to "Delete",
                        user_conversation_path(current_user, conversation),
                        method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete this conversation?" },
                        class: "btn btn-danger btn-sm" %>
        </li>
      <% end %>
    </ul>
  </section>
</div>
