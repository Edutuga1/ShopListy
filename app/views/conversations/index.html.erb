<div class="DM-page">
  <!-- Page Header -->
  <header class="text-center mb-4">
    <h1 class="display-4"><%= t('dm_page.title') %></h1>
  </header>

  <!-- Search for a Friend by Email -->
  <section class="mb-5">
    <h2 class="h4"><%= t('dm_page.search_for_friend') %></h2>
    <div class="card shadow-sm p-4">
      <%= form_with url: search_users_path, method: :get, local: true, class: "needs-validation" do |f| %>
        <div class="form-group mb-3">
          <%= f.label :email, t('dm_page.enter_email'), class: "form-label fw-semibold" %>
          <%= f.text_field :email, placeholder: t('dm_page.friend_email_placeholder'), class: "form-control" %>
        </div>
        <div class="d-flex justify-content-end">
          <%= f.submit t('dm_page.search_button'), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Friend Requests -->
  <section class="mb-5">
    <h3 class="h4"><%= t('dm_page.friend_requests') %></h3>
    <% if @pending_friend_requests.present? %>
      <ul class="list-group">
        <% @pending_friend_requests.each do |friendship| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><%= friendship.user.email %></span>
            <div>
              <%= button_to t('dm_page.accept'), accept_user_friendship_path(user_id: current_user.id, id: friendship.id), method: :patch, class: "btn btn-success btn-sm me-2" %>
              <%= button_to t('dm_page.reject'), reject_user_friendship_path(user_id: current_user.id, id: friendship.id), method: :patch, class: "btn btn-danger btn-sm" %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted"><%= t('dm_page.no_friend_requests') %></p>
    <% end %>
  </section>

  <!-- Start a New Conversation -->
  <section class="mb-5">
    <h2 class="h4"><%= t('dm_page.start_new_conversation') %></h2>
    <% if @friends_without_conversations.any? %>
      <ul class="list-group">
        <% @friends_without_conversations.each do |friend| %>
          <li class="list-group-item d-flex align-items-center">
            <%= image_tag(friend.user_photo.variant(resize_to_limit: [50, 50]).processed, class: "rounded-circle me-3", alt: "#{friend.name}'s profile picture") if friend.user_photo.attached? %>
            <%= link_to friend.name,
                        new_user_conversation_path(current_user, friend_id: friend.id),
                        class: "text-primary fw-bold" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted"><%= t('dm_page.no_friends_for_conversation') %></p>
    <% end %>
  </section>

  <!-- Open Conversations -->
  <section>
    <h1 class="h4"><%= t('dm_page.open_conversations') %></h1>
    <ul class="list-group">
      <% @conversations.each do |conversation| %>
        <li id="<%= dom_id(conversation) %>" class="list-group-item d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center">
            <%= image_tag conversation.other_user(current_user).user_photo.variant(resize_to_limit: [50, 50]).processed,
                          class: "rounded-circle me-3",
                          alt: "#{conversation.other_user(current_user).name}'s profile picture" if conversation.other_user(current_user).user_photo.attached? %>
            <%= link_to " #{conversation.other_user(current_user).name}",
                        user_conversation_path(current_user, conversation),
                        class: "text-dark fw-bold" %>
          </div>
          <%= button_to t('dm_page.delete_conversation'),
                        user_conversation_path(current_user, conversation),
                        method: :delete,
                        data: { turbo_confirm: t('dm_page.delete_confirm') },
                        class: "btn btn-danger btn-sm" %>
        </li>
      <% end %>
    </ul>
  </section>
</div>
