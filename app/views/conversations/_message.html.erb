<div class="message <%= message.sender == current_user ? 'sent' : 'received' %>">
  <div class="message-header">
    <% if message.sender != current_user %>
      <img src="<%= message.sender.profile_picture_url || 'default-avatar.png' %>" class="sender-profile-pic">
    <% end %>
    <strong><%= message.sender == current_user ? 'You' : message.sender.name %></strong>
  </div>

  <p class="message-content"><%= message.content %></p>

  <small class="timestamp"><%= message.created_at.strftime('%I:%M %p') %></small>

  <div class="message-tail"></div> <!-- Cartoon talk effect -->
</div>
