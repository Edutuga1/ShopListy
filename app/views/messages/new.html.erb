<h1>New Message</h1>

<%= form_with model: [current_user, @message], local: true do |form| %>
  <div class="form-group">
    <%= form.label :receiver_id, "Recipient" %>
    <%= form.collection_select :receiver_id, User.all, :id, :name, prompt: "Select a user", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :subject %>
    <%= form.text_field :subject, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content%>
    <%= form.text_area :content, rows: 5, class: "form-control" %>
  </div>

  <%= form.submit "Send Message", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to Messages', user_messages_path(current_user), class: "btn btn-secondary" %>
