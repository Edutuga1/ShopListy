<%= form_with(model: [current_user, @message], local: true) do |form| %>
  <div class="field">
    <%= form.label :receiver_id %>
    <%= form.collection_select :receiver_id, @users, :id, :name, prompt: 'Select recipient' %>
  </div>

  <div class="field">
    <%= form.label :subject %>
    <%= form.text_field :subject %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit 'Send Message' %>
  </div>
<% end %>
