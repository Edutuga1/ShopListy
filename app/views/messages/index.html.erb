<%= link_to 'New Message', new_user_message_path(current_user), class: 'btn btn-primary' %>
<h1>Your Messages</h1>
<h2>Received Messages</h2>
<% @received_messages.each do |message| %>
  <div>
    <strong>From:</strong> <%= message.sender.name %> |
    <strong>Received:</strong> <%= message.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
    <% if message.read? %>
      (Read)
    <% else %>
      (Unread)
    <% end %>
    <br>
    <%= link_to 'View', user_message_path(current_user, message) %>
  </div>
<% end %>

<h2>Sent Messages</h2>
<% @sent_messages.each do |message| %>
  <div>
    <strong>To:</strong> <%= message.receiver.name %> |
    <strong>Sent:</strong> <%= message.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
    <br>
    <%= link_to 'View', user_message_path(current_user, message) %>
  </div>
<% end %>
