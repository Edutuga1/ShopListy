<div class="admin-dashboard-container">
  <div class="admin-dashboard-header">
    <h1>Manage Users</h1>
  </div>

  <div class="admin-dashboard-card shadow-lg">
    <table class="admin-dashboard-table table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.admin? %>
                <span class="admin-role-badge admin-badge-admin">Admin</span>
              <% else %>
                <span class="admin-role-badge admin-badge-user">User</span>
              <% end %>
            </td>
            <td class="admin-action-buttons">
              <%= button_to "Toggle Admin", toggle_admin_admin_user_path(user), method: :patch, class: "admin-btn admin-btn-toggle" %>
              <%= button_to "Reset Password", reset_password_admin_user_path(user), method: :patch, class: "admin-btn admin-btn-reset" %>
              <%= button_to "Delete", admin_user_path(user), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this user?" }, class: "admin-btn admin-btn-delete" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="admin-back-btn-container">
    <button onclick="history.back()" class="admin-btn admin-btn-back">
      ‚Üê Back
    </button>
  </div>
</div>
