<h1>Manage Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.admin? %>
            <span class="badge bg-success">Admin</span>
          <% else %>
            <span class="badge bg-secondary">User</span>
          <% end %>
        </td>
        <td>
          <%= button_to "Toggle Admin", toggle_admin_admin_user_path(user), method: :patch, class: "btn btn-primary btn-sm" %>
          <%= button_to "Reset Password", reset_password_admin_user_path(user), method: :patch, class: "btn btn-warning btn-sm" %>
          <%= button_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
