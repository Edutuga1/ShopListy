<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <title>Terms of Service</title>
  <style>
    body {
      font-family: 'Georgia', serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    .container {
      width: 90%;
      max-width: 900px;
      margin: 20px auto;
      background-color: #fff;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      margin-top: 50px;
      margin-bottom: 50px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    h2 {
      color: #555;
    }

    p {
      color: #666;
      line-height: 1.6;
      margin-bottom: 15px;
    }

    a {
      color: #0066cc;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    .back-button {
      display: none;
      width: 130px;
      height: 35px;
      background-color: #0066cc;
      color: white;
      font-size: 1em;
      border-radius: 5px;
      text-decoration: none;
      position: fixed;
      top: 20px;
      left: 20px;
      z-index: 100;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .back-button:hover {
      background-color: #005bb5;
    }

    @media screen and (max-width: 600px) {
      .container {
        width: 95%;
        padding: 15px;
      }

      h1 {
        font-size: 2.5em;
      }

      h2 {
        font-size: 1.6em;
      }

      p {
        font-size: 14px;
      }
    }
  </style>
</head>
<body>

  <div class="container">
    <h1><%= t('terms_of_service.title') %></h1>

    <p><%= t('terms_of_service.intro', strong_tag: '<strong>ShopListy</strong>') %></p>

    <h2>1. <%= t('terms_of_service.acceptance_of_terms.title') %></h2>
    <p><%= t('terms_of_service.acceptance_of_terms.content') %></p>

    <h2>2. <%= t('terms_of_service.changes_to_terms.title') %></h2>
    <p><%= t('terms_of_service.changes_to_terms.content') %></p>

    <h2>3. <%= t('terms_of_service.user_responsibilities.title') %></h2>
    <p><%= t('terms_of_service.user_responsibilities.content') %></p>

    <h2>4. <%= t('terms_of_service.privacy_and_data_collection.title') %></h2>
    <p><%= t('terms_of_service.privacy_and_data_collection.content', link: link_to(t('terms_of_service.privacy_and_data_collection.link_text'), '/privacy-policy')) %></p>

    <h2>5. <%= t('terms_of_service.prohibited_activities.title') %></h2>
    <p><%= t('terms_of_service.prohibited_activities.content') %></p>

    <h2>6. <%= t('terms_of_service.account_termination.title') %></h2>
    <p><%= t('terms_of_service.account_termination.content') %></p>

    <h2>7. <%= t('terms_of_service.limitation_of_liability.title') %></h2>
    <p><%= t('terms_of_service.limitation_of_liability.content') %></p>

    <h2>8. <%= t('terms_of_service.governing_law.title') %></h2>
    <p><%= t('terms_of_service.governing_law.content') %></p>

    <h2>9. <%= t('terms_of_service.contact_us.title') %></h2>
    <p><%= t('terms_of_service.contact_us.content', email: link_to('shoplisty.help@gmail.com', 'mailto:shoplisty.help@gmail.com')) %></p>
  </div>

  <a href="javascript:history.back()" class="back-button"><i class="fas fa-arrow-left"></i> Go Back</a>
</body>
  <script>
    document.addEventListener('turbo:load', function () {
      const backButton = document.querySelector('.back-button');

      if (!backButton) return;

      window.addEventListener('scroll', function () {
        if (window.scrollY > 800) {
          backButton.style.display = 'flex';
        } else {
          backButton.style.display = 'none';
        }
      });

      window.addEventListener('turbo:before-cache', function () {
        backButton.style.display = 'none';
      });
    });
  </script>
</html>
