<!-- app/views/carts/show.html.erb -->
<h1>Your Cart</h1>

<% if @cart.items.any? %>
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.quantity %></td>
          <td><%= number_to_currency(cart_item.item.price) %></td>
          <td><%= number_to_currency(cart_item.item.price * cart_item.quantity) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>Total: <%= number_to_currency(@cart.total_price) %></h3>
<% else %>
  <p>Your cart is empty.</p>
<% end %>

<%= link_to 'Continue Shopping', root_path %>
<%= link_to 'Checkout', checkout_path %> <!-- Replace with your actual checkout path -->
