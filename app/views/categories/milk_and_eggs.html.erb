<div class="dairy-page">
  <h1>Milk and Eggs</h1>

  <% if @dairy_products.any? %>
    <% @dairy_products.each do |dairy_product| %>
      <div class="dairy-item">
        <p><%= dairy_product.name %></p>
        <%= form_with url: add_product_cart_path, method: :post, remote: true, html: { id: "add-to-cart-form-#{dairy_product.id}" } do |form| %>
          <%= form.hidden_field :product_id, value: dairy_product.id %>
          <%= form.number_field :quantity, min: 1, value: 1 %>
          <%= form.submit "Add to Cart", class: 'btn' %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p>No dairy products available.</p>
  <% end %>

  <div class="navigation-buttons">
    <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
    <%= link_to 'See Cart', cart_path, class: 'btn btn-primary' %>
  </div>
</div>
