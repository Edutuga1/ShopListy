<div class="fruit-page">
  <h1><%= t('fruit_page.title') %></h1>

  <!-- Back and See Cart Buttons -->
  <div class="navigation-buttons">
    <%= link_to t('fruit_page.back'), new_list_path, class: 'btn btn-secondary' %>
    <%= link_to t('fruit_page.see_cart'), cart_path, class: 'btn btn-primary' %>
  </div>

  <!-- Centered Search Bar -->
  <div class="search-container">
    <%= form_with url: fruits_path, method: :get, local: true, class: "search-form" do |form| %>
      <%= form.label :query, t('fruit_page.search_label'), class: "search-label" %>
      <%= form.text_field :query, value: params[:query], placeholder: t('fruit_page.search_placeholder'), class: "search-input" %>
      <%= form.submit t('fruit_page.search'), class: "btn btn-primary" %>
    <% end %>
  </div>

  <!-- Fruits Products Display -->
  <% if @fruits_products.any? %>
    <div class="fruit-grid">
      <% @fruits_products.each do |product| %>
        <div class="fruit-item">
          <!-- Translated product name -->
          <p><%= I18n.t("product_names.#{product.name.parameterize.underscore}") %></p>

          <% image_filename = "#{product.name.parameterize}" %>
          <% if File.exist?(Rails.root.join("app/assets/images/#{image_filename}.jpg")) %>
            <%= image_tag "#{image_filename}.jpg", class: "product-image", alt: product.name %>
          <% elsif File.exist?(Rails.root.join("app/assets/images/#{image_filename}.png")) %>
            <%= image_tag "#{image_filename}.png", class: "product-image", alt: product.name %>
          <% else %>
            <p><%= t('fruit_page.no_image') %></p>
          <% end %>

          <!-- Add to Cart Form -->
          <%= form_with url: add_product_cart_path, method: :post, remote: true, html: { id: "add-to-cart-form-#{product.id}" } do |form| %>
            <%= form.hidden_field :product_id, value: product.id %>

            <label class="quantity-label" for="quantity-<%= product.id %>"><%= t('fruit_page.quantity_label') %>:</label>
            <%= form.number_field :quantity, min: 1, value: 1, id: "quantity-#{product.id}" %>

            <button class="btn add-to-cart" type="submit">
              <i class="fas fa-shopping-cart"></i> <%= t('fruit_page.add_to_cart') %>
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p><%= t('fruit_page.no_products') %></p>
  <% end %>

  <!-- Font Awesome Script -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</div>
