<div class="fish-page">
  <h1>Fish</h1>

  <% if @fish_products.any? %>
    <% @fish_products.each do |fish_product| %>
      <div class="fish-item">
        <p><%= fish_product.name %></p>
        <%= form_with url: add_product_cart_path, method: :post, local: true, html: { id: "add-to-cart-form-#{fish_product.id}" } do |form| %>
          <%= form.hidden_field :product_id, value: fish_product.id %>
          <%= form.number_field :quantity, min: 1, value: 1 %>
          <%= form.submit "Add to Cart", class: 'btn' %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p>No fish products available.</p>
  <% end %>

  <div class="navigation-buttons">
    <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
    <%= link_to 'See Cart', cart_path, class: 'btn btn-primary' %>
  </div>
</div>
