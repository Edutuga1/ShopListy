<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="change-password-card shadow-lg p-5 rounded-4">
    <div class="card-body text-center d-flex flex-column justify-content-center">
      <h2 class="change-pw-title">Change Your Password</h2>
      <p class="change-pw-text">Enter a new password below.</p>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "change-password-form" }) do |f| %>
        <%= f.input :reset_password_token, as: :hidden %>

        <div class="mb-3">
          <%= f.input :password,
                      label: false,
                      required: true,
                      autofocus: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { class: "form-control change-password-input", autocomplete: "new-password", placeholder: "New password" } %>
        </div>

        <div class="mb-3">
          <%= f.input :password_confirmation,
                      label: false,
                      required: true,
                      input_html: { class: "form-control change-password-input", autocomplete: "new-password", placeholder: "Confirm new password" } %>
        </div>

        <button type="submit" class="update-pw-button">
          <span>Update Password</span>
        </button>
      <% end %>

      <div class="mt-4">
        <a href="<%= new_session_path(resource_name) %>" class="text-decoration-none text-primary">Back to Login</a>
      </div>
    </div>
  </div>
</div>
