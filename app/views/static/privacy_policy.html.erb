<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <title>Privacy Policy</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Georgia', serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .container {
      background-color: #ffffff;
      padding: 40px;
      width: 80%;
      max-width: 900px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      line-height: 1.6;
      font-size: 16px;
      margin-top: 30px;
      margin-bottom: 100px;
      margin-left: auto;
      margin-right: auto;
      flex-grow: 1;
    }

    h1 {
      text-align: center;
      font-size: 2.5em;
      color: #333;
      margin-bottom: 20px;
    }

    h2 {
      font-size: 1.8em;
      color: #444;
      margin-top: 20px;
      margin-bottom: 10px;
    }

    p {
      margin-bottom: 20px;
    }

    ul {
      margin-left: 20px;
      list-style-type: disc;
    }

    a {
      color: #0066cc;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    .back-button {
      display: none;
      width: 130px;
      height: 35px;
      background-color: #0066cc;
      color: white;
      font-size: 1em;
      border-radius: 5px;
      text-decoration: none;
      position: fixed;
      top: 20px;
      left: 20px;
      z-index: 100;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .back-button:hover {
      background-color: #005bb5;
    }

    @media screen and (max-width: 600px) {
      .container {
        width: 95%;
        padding: 15px;
      }

      h1 {
        font-size: 2.5em;
      }

      h2 {
        font-size: 1.6em;
      }

      p {
        font-size: 14px;
      }
    }
  </style>
</head>
<body>

  <div class="container">
    <h1><%= t("privacy_policy.title") %></h1>

    <p><%= t("privacy_policy.intro_html", site_name: "ShopListy") %></p>

    <h2><%= t("privacy_policy.section1.title") %></h2>
    <p><%= t("privacy_policy.section1.description") %></p>
    <ul>
      <li><strong><%= t("privacy_policy.section1.personal_info_title") %></strong> <%= t("privacy_policy.section1.personal_info_desc") %></li>
      <li><strong><%= t("privacy_policy.section1.non_personal_info_title") %></strong> <%= t("privacy_policy.section1.non_personal_info_desc") %></li>
    </ul>

    <h2><%= t("privacy_policy.section2.title") %></h2>
    <p><%= t("privacy_policy.section2.description") %></p>
    <ul>
      <li><%= t("privacy_policy.section2.use1") %></li>
      <li><%= t("privacy_policy.section2.use2") %></li>
      <li><%= t("privacy_policy.section2.use3") %></li>
    </ul>

    <h2><%= t("privacy_policy.section3.title") %></h2>
    <p><%= t("privacy_policy.section3.description") %></p>

    <h2><%= t("privacy_policy.section4.title") %></h2>
    <p><%= t("privacy_policy.section4.description") %></p>
    <ul>
      <li><%= t("privacy_policy.section4.share1") %></li>
      <li><%= t("privacy_policy.section4.share2") %></li>
    </ul>

    <h2><%= t("privacy_policy.section5.title") %></h2>
    <p><%= t("privacy_policy.section5.description") %></p>

    <h2><%= t("privacy_policy.section6.title") %></h2>
    <p><%= t("privacy_policy.section6.description") %></p>

    <h2><%= t("privacy_policy.section7.title") %></h2>
    <p><%= t("privacy_policy.section7.description_html", email: "shoplisty.help@gmail.com") %></p>

    <h2><%= t("privacy_policy.section8.title") %></h2>
    <p><%= t("privacy_policy.section8.description") %></p>

    <h2><%= t("privacy_policy.section9.title") %></h2>
    <p><%= t("privacy_policy.section9.description_html", email: "shoplisty.help@gmail.com") %></p>
  </div>


  <a href="javascript:history.back()" class="back-button"><i class="fas fa-arrow-left"></i> Go Back</a>
  <script>
    document.addEventListener('turbo:load', function () {
      const backButton = document.querySelector('.back-button');

      if (!backButton) return;

      window.addEventListener('scroll', function () {
        if (window.scrollY > 800) {
          backButton.style.display = 'flex';
        } else {
          backButton.style.display = 'none';
        }
      });

      window.addEventListener('turbo:before-cache', function () {
        backButton.style.display = 'none';
      });
    });
  </script>
</body>
</html>
