<div class="container">
  <!-- Search Bar -->
  <div class="search-bar">
    <input type="text" placeholder="Search your daily grocery food..." class="search-input">
  </div>

  <!-- Categories -->
  <div class="categories">
    <h2>Categories</h2>
    <div class="grid">
      <div class="category-item">
        <img src="path_to_vegetables_icon.png" alt="Vegetables">
        <p>Vegetables</p>
      </div>
      <div class="category-item">
        <img src="path_to_fruits_icon.png" alt="Fruits">
        <p>Fruits</p>
      </div>
      <!-- Add more categories as needed -->
    </div>
  </div>

  <!-- Products -->
  <div class="products">
    <h2>Fruits</h2>
    <div class="grid">
      <div class="product-item">
        <img src="path_to_strawberry_image.png" alt="Strawberry">
        <p>Strawberry (1KG) - $17.20</p>
        <button class="add-to-cart">+</button>
      </div>
      <div class="product-item">
        <img src="path_to_orange_image.png" alt="Orange">
        <p>Orange (10 Pcs) - $10.00</p>
        <button class="add-to-cart">+</button>
      </div>
      <!-- Add more products as needed -->
    </div>
  </div>
</div>
  