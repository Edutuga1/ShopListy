<div class="settings-page">
  <div class="settings-container">
    <h1>Settings</h1>

    <%= form_for @user, url: settings_path, method: :patch do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= t('profile.error_header', count: @user.errors.count) %></h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Name Field -->
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <!-- Email Field -->
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <!-- Notification Preference -->
      <div class="form-group">
        <%= f.label :notifications_enabled, "Enable Notifications" %>
        <label class="switch">
          <%= f.check_box :notifications_enabled, class: "toggle-checkbox" %>
          <span class="slider"></span>
        </label>
      </div>
      <div id="notification-status">
        <% if @user.notifications_enabled %>
          Notifications: Enabled
        <% else %>
          Notifications: Disabled
        <% end %>
      </div>

      <!-- Password Fields (Always Visible) -->
      <div class="form-group">
        <%= f.label :current_password, "Current Password" %>
        <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
        <small class="form-text text-muted">Please enter your current password to confirm changes</small>
      </div>

      <div class="form-group">
        <%= f.label :password, "New Password" %>
        <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
        <small class="form-text text-muted">Leave blank if you don't want to change your password</small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm New Password" %>
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
      </div>

      <!-- Submit Button -->
      <div class="form-group">
        <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= link_to request.referer || root_path, class: 'settings-back-button' do %>
      <span class="button-content"><%= t('cart_page.back') %></span>
    <% end %>
  </div>
</div>

<script>
  // Update notification status text when toggled
  const notificationStatus = document.getElementById('notification-status');
  const notificationToggle = document.querySelector('.toggle-checkbox');

  notificationToggle.addEventListener('change', () => {
    if (notificationToggle.checked) {
      notificationStatus.textContent = 'Notifications: Enabled';
    } else {
      notificationStatus.textContent = 'Notifications: Disabled';
    }
  });

</script>
